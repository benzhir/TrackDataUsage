<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.hc2i.datamonitor.core.base.PreferenceHeader
        app:allowDividerBelow="false"
        app:allowDividerAbove="false">

        <com.hc2i.datamonitor.core.base.PreferenceCategory
            android:title="@string/current_language"
            app:iconSpaceReserved="false">

            <com.hc2i.datamonitor.core.base.Preference
                android:title="@string/current_language"
                android:key="current_language"
                app:iconSpaceReserved="false"/>

        </com.hc2i.datamonitor.core.base.PreferenceCategory>

        <com.hc2i.datamonitor.core.base.PreferenceCategory
            android:title="@string/available_languages"
            app:iconSpaceReserved="false">

            <com.hc2i.datamonitor.core.base.Preference
                android:key="available_languages_placeholder"
                app:iconSpaceReserved="false"/>

        </com.hc2i.datamonitor.core.base.PreferenceCategory>

    </com.hc2i.datamonitor.core.base.PreferenceHeader>

</PreferenceScreen>